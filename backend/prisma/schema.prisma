// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TodoPriority {
  LOW
  HIGH
  CRITICAL
}

enum TodoStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model User {
  id        String @id @default(uuid())
  username  String @unique
  password  String
  createdAt DateTime
  updatedAt DateTime?

  refreshTokens RefreshToken[]
  todos         Todo[]
}

model RefreshToken {
  id         String   @id @default(uuid())
  token      String   // Store hashed refresh tokens for security
  userId     String
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Todo {
  id          String @id @default(uuid())
  userId      String
  title       String // 25 chars max
  details     String // 300 chars max
  priority    TodoPriority
  status      TodoStatus
  createdAt   DateTime
  dueAt       DateTime
  completedAt DateTime?
  updatedAt   DateTime?

  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
}